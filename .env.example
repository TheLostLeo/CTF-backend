# Application Configuration
PORT=8080
GIN_MODE=release

# AWS RDS Database Configuration with KMS Encryption
DB_HOST=your-rds-endpoint.region.rds.amazonaws.com
DB_PORT=5432
DB_USER=your_db_username
DB_PASSWORD=your_db_password
DB_NAME=ctf_database
DB_SSLMODE=require

# Database Connection Pool Settings (optimized for RDS)
DB_MAX_OPEN_CONNS=25
DB_MAX_IDLE_CONNS=10
DB_CONN_MAX_LIFETIME=300

# AWS IAM Database Authentication (optional - set to true to use IAM instead of password)
DB_USE_IAM_AUTH=false

# AWS Configuration
AWS_REGION=us-east-1
# AWS_ACCESS_KEY_ID=your-access-key (optional if using IAM role)
# AWS_SECRET_ACCESS_KEY=your-secret-key (optional if using IAM role)

# JWT Secret for authentication (generate a secure random string)
# You can generate one using: openssl rand -base64 32
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production