# Copy this file to .env and update the values as needed

# Application Configuration
PORT=6009
GIN_MODE=release

# Database Configuration
DB_HOST=postgres
DB_PORT=5432
DB_USER=ctf_user
DB_PASSWORD=ctf_password
DB_NAME=ctf_database
DB_SSLMODE=disable

# PostgreSQL Environment Variables
POSTGRES_DB=ctf_database
POSTGRES_USER=ctf_user
POSTGRES_PASSWORD=ctf_password

# NocoDB Configuration
NOCODB_PORT=8080
NC_AUTH_JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
NC_PUBLIC_URL=http://localhost:8080

# Container Names
POSTGRES_CONTAINER=ctf_postgres
NOCODB_CONTAINER=ctf_nocodb
BACKEND_CONTAINER=ctf_backend

# Network
NETWORK_NAME=ctf_network
